<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.masphe.accessgithub.dataCenter.api.response.User"
            />
        <variable
            name="backgroundImageId"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/vertical_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_headshot"
            android:layout_width="@dimen/ly_headshot"
            android:layout_height="@dimen/ly_headshot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                style="@style/Text.HeadShot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="3dp"
                bind:name="@{user.username}"
                bind:background_id="@{backgroundImageId}"
                tools:background="@drawable/ic_headshot_blue"
                tools:text="DC"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_headshot_border"
                android:visibility="@{user.isSelected? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@{user.isSelected? @dimen/font_user_name : @dimen/font_user_name_selected}"
            android:textColor="@{user.isSelected? @android:color/white : @android:color/black}"
            android:text="@{user.username}"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/ly_headshot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Maxime_Nienow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>